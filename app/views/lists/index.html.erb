<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card text-bg-dark">
          <img src="https://images.unsplash.com/photo-1478720568477-152d9b164e26?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img" alt="...">
